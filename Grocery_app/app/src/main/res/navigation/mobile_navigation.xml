<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_stores">

    <fragment
        android:id="@+id/navigation_stores"
        android:name="com.example.grocery_app.ui.shopping_cart.HomeFragment"
        android:label="@string/title_stores"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_shopping_cart"
        android:name="com.example.grocery_app.ui.stores.DashboardFragment"
        android:label="@string/title_shopping_cart"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.grocery_app.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>